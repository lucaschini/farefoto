generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String
  description String
  category String
  price Float
  imageUrl String
  linkWhatsapp String
}